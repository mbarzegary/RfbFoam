FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 0.001; //all dimensions in mm

x0      5;     //electrode thickness (mm) 
y0      2;      //electrode length (mm)
z0      25;     //electrode width (mm)

x1      20;     //electrode thickness (mm) 
y1      4;      //electrode length (mm)
z1      5;     //electrode width (mm)

d_ch    0.5;       //channel depth (mm)
w_ch    1.0;       //channel width (mm)


delta_x   0.25;   //grid size x-direction (orig: 0.005)
delta_y   0.075;   //grid size y-direction (orig: 0.020)
delta_z   0.25;   //grid size z-direction (orig: 0.020)

nLx     #calc "round(($x1+$x0)/$delta_x)";            //no. of grid cells in x-direction (electrode)     
nLy     #calc "round(($y1+$y0)/$delta_y)";      //no. of grid cells in y-direction (electrode)
nLz     #calc "round(($z1+$z0)/$delta_z)";    //no. of grid cells in z-direction


vertices
(
    ( -$x0   -$y0   -$z0   ) //0
    ( $x1 -$y0   -$z0   ) //1
    ( $x1 $y1 -$z0   ) //2
    ( -$x0   $y1 -$z0   ) //3
    ( -$x0   -$y0   $z1 ) //4
    ( $x1 -$y0   $z1 ) //5
    ( $x1 $y1 $z1 ) //6
    ( -$x0   $y1 $z1 ) //7 
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nLx $nLy $nLz) simpleGrading (1 1 1)        //electrode bulk (orig.)
);

